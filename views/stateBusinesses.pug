extends layout6

include mixins/_pagination

block content
  
  .businesses
    //- button.open-btn Open Live Coming Data
    //- div(id="businesses-wrapper")
    //- script(src="/socket.io/socket.io.js")
    form.search(action='/search/results' method='GET')
      input.search__input(type="text" placeholder="Business Reg, Business name..." name="search")
      button(type='submit')
        i.fa.fa-search
      //- .search__results
    table.table.table-bordered
      thead
        tr
          th REGISTRATION NO
          th BUSINESS NAME
          th NATURE OF BUSINESS
          th STATE
          th DATE
          th ACTION
      tbody(id="myTable")
        each business in businesses
          tr
            td
              =business.regNumber
            td
              =business.businessName
            td
              =business.natureOfBusiness
            td
              =business.state
            td
              =business.dateOfReg
            td
              a.link__button(href=`/${user.state}/business/${business._id}` style='color:white') VIEW
    +pagination(page, pages, total)  
      