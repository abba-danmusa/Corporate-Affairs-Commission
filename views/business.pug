extends layout
block content
  a.link__button(href="/admin/businesses") BACK
    .business
      h1= `BUSINESS NAME: ${business.businessName}`
      h3= `REGISTRATION NO.: ${business.regNumber}`
      h4= `ADDRESS: ${business.businessAddress}` 
      h4= `NATURE OF BUSINESS: ${business.natureOfBusiness}`
      h4= `REGISTRATION DATE: ${business.dateOfReg}`
      h4= `PROPRIETORS: ${business.proprietors}`
      h6= `SAVED BY: ${business.author}`
      form(action=`/admin/business/${business.name}/${business._id}` method='post')
        button.link__button(type='submit') DELETE BUSINESS 