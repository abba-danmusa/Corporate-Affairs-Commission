mixin business(business)
  each item in business
    .business
      if user.hasPrivilege
        a.button(href=`/edit/${item._id}` style='background-color: #1c330d; color: white; padding: 4px; margin-top: 8px;') EDIT
      h1= `BUSINESS NAME: ${item.businessName}`
      .details
        .left__side
          h3
            strong= 'REGISTRATION NO.:' 
          h3
            strong= 'ADDRESS:'
          h3
            strong= 'NATURE OF BUSINESS:' 
          h3
            strong= 'REGISTRATION DATE:'
          h3
            strong= 'PROPRIETORS:'
          h6
            strong= 'SAVED BY:'
        .right__side
          h3=item.regNumber
          h3=item.businessAddress
          h3=item.natureOfBusiness
          h3=item.dateOfReg
          h3=item.proprietors
          h6=item.author
      if item.file
        //- !=h.dump(business.fileSrc)
        .pdf
          embed(src=`${item.fileSrc}#toolbar=1` type='application/pdf' width='1000vw' height='600px')
