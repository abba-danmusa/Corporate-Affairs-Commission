mixin pagination(page, pages, total)
  .pagination
    .pagination__prev
      if page > 1
        a(href=`/stores/page/${parseFloat(page) - 1}`) Prev
    .pagination__text
      p Page #{page} of #{pages} - #{total} total results 
    .pagination__next
      if page < pages
        a(href=`/stores/page/${parseFloat(page) + 1}`) Next