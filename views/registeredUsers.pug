extends layout

block header
  nav.nav
    .site-identity
      a(href="/admin")
        img(src="/images/logos.png" alt="Site logo")
    a.nav__button.button(href='/admin')
      !=h.icon('arrow-left-solid')
      span BACK
    .nav__buttons
      
      a.button(href='#')
        !=h.icon('user-solid') 
        span admin
      a.button(href='/admin/register-user')
        !=h.icon('user-plus-solid')
        span Register User
      a.button(href='/admin/businesses')
        !=h.icon('history-solid')
        span History

block content
 .container
  .table-wrapper
    .table-title
      .row
        .col-sm-8
          h2
            | Registered 
            b Users
    
    table.table.table-bordered
      thead
        tr
          th Username
          th name
          th Account type
          th State 
          th delete    
      tbody(id="myTable")
        each user in users
          tr
            td=`${user.userName}`
            td=`${user.name}`
            td=`${user.userType}`
            td=`${user.state}`
            td
              form(action=`/admin/registered-users/delete-user/${user._id}` method='post')
                button.link__button(type='submit') DELETE USER
         
         
           
       
  