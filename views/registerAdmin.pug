extends layout

block content

  .inner 
    .signup-form
      form(action="/admin/register-admin" method="post")
        h2 Register
        .form-group
          .row
            .col-xs-6
              input(type="text" class="form-control" name="name" placeholder="Name" required="required")

        .form-group
          input(type="password" class="form-control" name="password" placeholder="Password" required="required")

        .form-group
          input(type="password" class="form-control" name="confirm-password" placeholder="Confirm Password" required="required") 

        .form-group
          button(type="submit" class="btn btn-success btn-lg btn-block") Register